{
  "manifest_version": 2,
  "name": "Read to me",
  "version": "0.0.1",
  "permissions": [
    "contextMenus",
    "tabs",
    "tts",
    "<all_urls>"
  ],
  "icons": {
    "16": "icon16.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "commands": {
    "startstop": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space",
	"mac": "Command+Shift+Space"
      },
      "description": "Start/stop reading"
    }
  }
}
